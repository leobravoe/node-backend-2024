{{!-- Show de Mesa --}}

<div class="container">
    <div class="my-3">
        <label for="id-input-id" class="form-label">ID</label>
        <input type="text" id="id-input-id" value="{{mesa.id}}" class="form-control" disabled>
    </div>
    <div class="my-3">
        <label for="id-input-numero" class="form-label">Número</label>
        <input type="text" id="id-input-numero" value="{{mesa.numero}}" class="form-control" disabled>
    </div>
    <div class="my-3">
        <label for="id-input-estado" class="form-label">Estado</label>
        {{#if (igual mesa.estado 'A') }}
            <input type="text" id="id-input-estado" value="Aberta" class="form-control" disabled>
        {{else}}
            {{#if (igual mesa.estado 'O') }}
                <input type="text" id="id-input-estado" value="Ocupada" class="form-control" disabled>
            {{else}}
                {{#if (igual mesa.estado 'R') }}
                    <input type="text" id="id-input-estado" value="Reservada" class="form-control" disabled>
                {{else}}
                    <input type="text" id="id-input-estado" value="Indefinido" class="form-control" disabled>
                {{/if}}
            {{/if}}
        {{/if}}
    </div>
    <div class="my-3">
        <label for="id-input-dataAtualizacao" class="form-label">Data Atualização</label>
        <input type="text" id="id-input-dataAtualizacao" value="{{mesa.dataAtualizacao}}" class="form-control" disabled>
    </div>
    <div class="my-3">
        <label for="id-input-dataCriacao" class="form-label">Data Criação</label>
        <input type="text" id="id-input-dataCriacao" value="{{mesa.dataCriacao}}" class="form-control" disabled>
    </div>
    <div class="my-3">
        <a href="/mesa" class="btn btn-primary">Voltar</a>
    </div>
</div>